---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

import Article from "../../components/Article.astro";
import NewsLayout from "../../layouts/NewsLayout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";

import "../../styles/global.css";
export async function getStaticPaths() {
	const allCommittee = await getCollection("committee");

	return allCommittee.map((post) => ({
		params: { slug: post.slug },
		props: { post },
	}));
}

const { post } = Astro.props as { post: CollectionEntry<"committee"> };
---

<NewsLayout>
	<div class="flex-2">
		<div><Navbar /></div>
		<div class="flex flex-col">
			<div class="grow py-10 px-3">
				<div class="text-4xl font-bold pt-30">
					<Article slug={post.slug} variant="committee" />
				</div>
			</div>
		</div>
	</div>
	<Footer />
</NewsLayout>
