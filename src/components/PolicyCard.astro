---
const { policy, slug } = Astro.props;
---

<a
	href={`/policies/${slug}`}
	class="flex-1 flex items-center justify-between py-5 bg-gray-200 rounded w-full px-2 hover:bg-gray-300"
>
	<span class="text-2xl">{policy.data.title}</span>
	<span class="text-gray-500 font-light">
		{new Date(policy.data.date).toLocaleDateString()}
	</span>
</a>
