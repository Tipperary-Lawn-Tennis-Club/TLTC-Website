---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import "../../styles/global.css";
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

const allCommittee: CollectionEntry<"committee">[] =
	await getCollection("committee");

console.log(allCommittee[0]);
---

<Layout>
	<Navbar />
	<div class="grid grid-cols-1 px-3 py-40 sm:grid-cols-2 lg:grid-cols-3 gap-6">
		{
			allCommittee.map((post) => (
			<div class="card bg-base-100 w-96 shadow-sm">
					<figure>
						<Image
							class="card-image"
							src={post.data.image}
							alt={post.data.alt || post.data.title} />
					</figure>
					<div class="card-body">
						<h2 class="card-title">
							{post.data.title}
						</h2>
						<p>
							{post.data.position}
						</p>
				
					</div>
				</div>
			))
		}
	</div>
	<Footer />
</Layout>
