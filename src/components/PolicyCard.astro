---
const { policy, slug } = Astro.props;
---

<a
	href={`/policies/${slug}`}
	class="flex-1 flex items-center justify-between py-3 bg-gray-200 rounded w-full
	font-semibold px-2 hover:bg-base-100 hover:ring-2 hover:ring-accent"
>
	<span class="text-2xl">{policy.data.title}</span>
	<span class="text-gray-500 font-medium text-lg">
		{new Date(policy.data.date).toLocaleDateString()}
	</span>
</a>
